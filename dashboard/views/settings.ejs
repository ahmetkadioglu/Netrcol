<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Dashboard | Select Server</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        :root {
            --primary: #6366f1; --secondary: #a855f7; --accent: #ec4899; --success: #10b981;
            --bg: #030014; --surface: #1e1f24; --text: #ffffff; --text-muted: #94a3b8;
            --border: rgba(255, 255, 255, 0.1);
        }
        
        * { margin: 0; padding: 0; box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
        
        body {
            background-color: var(--bg); color: var(--text); font-family: 'Outfit', sans-serif;
            display: flex; flex-direction: column; min-height: 100vh; overflow-x: hidden;
            opacity: 0; animation: pageFadeIn 0.5s ease forwards; /* Sayfa tamamen yüklenince görünür */
        }

        @keyframes pageFadeIn { to { opacity: 1; } }

        /* --- BACKGROUND FX --- */
        #particles { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; pointer-events: none; }
        .blob { position: fixed; width: 600px; height: 600px; border-radius: 50%; filter: blur(120px); opacity: 0.3; z-index: -2; pointer-events: none; }
        .blob-1 { top: -200px; left: -200px; background: var(--primary); animation: floatBlob 15s infinite alternate; }
        .blob-2 { bottom: -200px; right: -200px; background: var(--secondary); animation: floatBlob 20s infinite alternate-reverse; }

        /* --- NAVBAR --- */
        .dashboard-nav {
            display: flex; justify-content: space-between; align-items: center; padding: 15px 5%;
            width: 100%; backdrop-filter: blur(20px); background: rgba(3, 0, 20, 0.8);
            border-bottom: 1px solid var(--border); position: sticky; top: 0; z-index: 1000;
        }
        .dashboard-logo { font-size: 1.4rem; font-weight: 800; color: #fff; display: flex; align-items: center; gap: 10px; text-decoration: none; }
        .dashboard-logo img { width: 35px; height: 35px; border-radius: 50%; border: 2px solid var(--primary); }
        
        .nav-right { display: flex; align-items: center; gap: 15px; }
        .nav-user-profile {
            display: flex; align-items: center; gap: 10px; background: rgba(255, 255, 255, 0.05);
            padding: 5px 12px 5px 5px; border-radius: 50px; border: 1px solid var(--border);
        }
        .nav-user-profile img { width: 28px; height: 28px; border-radius: 50%; }
        .nav-user-profile span { font-weight: 600; font-size: 0.9rem; padding-right: 5px; }

        .nav-back-btn {
            background: rgba(255, 255, 255, 0.05); color: var(--text-muted); text-decoration: none;
            padding: 8px 12px; border-radius: 8px; font-weight: 600; font-size: 0.85rem; display: flex; align-items: center; gap: 5px;
        }

        /* --- HEADER (DÜZELTİLDİ) --- */
        header {
            width: 90%; max-width: 1200px; margin: 40px auto; padding: 50px;
            background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px);
            border-radius: 24px; border: 1px solid var(--border);
            position: relative; overflow: hidden;
            display: flex; flex-direction: column; align-items: center; text-align: center;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            animation: fadeInDown 0.8s ease;
        }
        
        header::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 3px; background: linear-gradient(90deg, var(--primary), var(--secondary)); }
        
        .welcome-info { position: relative; z-index: 2; width: 100%; }
        .welcome-info h1 {
            font-size: 3rem; font-weight: 900; margin-bottom: 10px;
            background: linear-gradient(to right, #ffffff, var(--primary));
            -webkit-background-clip: text; -webkit-text-fill-color: transparent; line-height: 1.2;
        }
        .welcome-info p { color: var(--text-muted); font-size: 1.1rem; max-width: 600px; margin: 0 auto; line-height: 1.6; }
        
        /* Buton Masaüstünde Sağda Sabit, Mobilde Altta */
        .home-action-btn {
            background: linear-gradient(135deg, var(--primary), var(--secondary)); color: white;
            padding: 12px 25px; border-radius: 12px; text-decoration: none; font-weight: 700;
            display: inline-flex; align-items: center; gap: 8px; font-size: 1rem;
            box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3); transition: 0.3s; z-index: 5;
            margin-top: 20px; /* Mobilde boşluk */
        }
        .home-action-btn:hover { transform: translateY(-3px); box-shadow: 0 8px 25px rgba(99, 102, 241, 0.5); }

        /* Masaüstü Düzeni (Butonu sağa alır) */
        @media (min-width: 992px) {
            header { flex-direction: row; justify-content: center; padding: 60px; }
            .home-action-btn { position: absolute; right: 50px; margin-top: 0; top: 50%; transform: translateY(-50%); }
            .home-action-btn:hover { transform: translateY(calc(-50% - 3px)); }
        }

        /* --- SERVER GRID --- */
        .server-grid {
            width: 90%; max-width: 1300px; margin: 0 auto 50px;
            display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 25px;
        }
        
        .server-card {
            background: linear-gradient(145deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
            border: 1px solid var(--border); padding: 25px; border-radius: 20px;
            display: flex; align-items: center; gap: 20px;
            transition: 0.4s cubic-bezier(0.215, 0.610, 0.355, 1);
            position: relative; overflow: hidden; backdrop-filter: blur(10px);
        }

        /* İçeriklerin üstte kalması için */
        .content-wrapper { display: flex; align-items: center; gap: 15px; flex-grow: 1; position: relative; z-index: 2; }

        /* Parlama Efekti (Z-Index Düzeltildi) */
        .server-card::after {
            content: ''; position: absolute; inset: 0; border-radius: 20px; padding: 2px;
            background: linear-gradient(45deg, transparent, var(--primary), transparent);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor; mask-composite: exclude; opacity: 0; transition: 0.4s;
            z-index: 1; pointer-events: none;
        }
        
        .server-card:hover { transform: translateY(-7px); background: rgba(255,255,255,0.05); border-color: var(--primary); box-shadow: 0 10px 30px rgba(0,0,0,0.2); }
        .server-card:hover::after { opacity: 1; }
        
        .server-icon {
            width: 65px; height: 65px; border-radius: 50%; background-color: var(--surface);
            border: 3px solid var(--primary); box-shadow: 0 0 15px rgba(99, 102, 241, 0.3);
            overflow: hidden; flex-shrink: 0; display: flex; align-items: center; justify-content: center;
        }
        .server-icon img { width: 100%; height: 100%; object-fit: cover; }
        .server-icon-placeholder { font-size: 1.8rem; color: white; font-weight: bold; }
        
        .server-info h3 { margin: 0 0 5px 0; font-size: 1.25rem; font-weight: 700; color: white; }
        .server-status { display: flex; align-items: center; gap: 6px; font-size: 0.85rem; }
        .status-dot { width: 8px; height: 8px; border-radius: 50%; }
        .status-dot.online { background: var(--success); box-shadow: 0 0 8px var(--success); }
        .status-dot.offline { background: #ef4444; }

        /* Butonlar (Z-Index Düzeltildi - Tıklanabilir) */
        .manage-btn {
            position: relative; z-index: 10;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white; padding: 10px 24px; border-radius: 10px; text-decoration: none; transition: 0.3s;
            white-space: nowrap; font-weight: 600; border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3); display: flex; align-items: center; gap: 8px; font-size: 0.95rem;
        }
        .manage-btn.invite { background: linear-gradient(135deg, var(--success), #22c55e); box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4); }
        .manage-btn:hover { filter: brightness(1.15); box-shadow: 0 8px 25px rgba(99, 102, 241, 0.5); transform: translateY(-2px); }
        .manage-btn:active { transform: translateY(0); }

        /* --- Message Box --- */
        .message-box {
            grid-column: 1 / -1; padding: 50px; border-radius: 20px; text-align: center;
            border: 2px dashed var(--accent); color: var(--text-muted); background: rgba(236, 72, 153, 0.05);
        }
        .invite-link {
            display: inline-block; margin-top: 20px; padding: 12px 30px;
            background: linear-gradient(135deg, var(--primary), var(--secondary)); color: white;
            text-decoration: none; border-radius: 10px; font-weight: 600;
        }

        /* --- Footer --- */
        footer { background: #02000d; border-top: 1px solid var(--border); padding: 50px 5% 30px; margin-top: auto; }
        .footer-content { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 40px; }
        .footer-col h4 { font-size: 1rem; margin-bottom: 20px; color: white; text-transform: uppercase; letter-spacing: 1px; }
        .footer-col ul { list-style: none; } .footer-col ul li { margin-bottom: 12px; }
        .footer-col ul li a { color: var(--text-muted); text-decoration: none; transition: 0.3s; }
        .footer-col ul li a:hover { color: var(--primary); }
        .copyright { text-align: center; border-top: 1px solid rgba(255, 255, 255, 0.05); padding-top: 30px; margin-top: 40px; color: var(--text-muted); font-size: 0.9rem; }

        @keyframes fadeInDown { from { opacity: 0; transform: translateY(-20px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes floatBlob { 0% { transform: translate(0, 0); } 100% { transform: translate(50px, 50px); } }

        /* --- MOBILE RESPONSIVE --- */
        @media (max-width: 768px) { 
            .dashboard-nav { padding: 15px 20px; }
            .nav-user-profile span { display: none; }
            
            header { width: 100%; border-radius: 0; border-left: none; border-right: none; margin: 0 0 30px 0; padding: 40px 20px; }
            .welcome-info h1 { font-size: 2.2rem; }
            
            .server-grid { width: 100%; padding: 0 15px; grid-template-columns: 1fr; }
            .server-card { padding: 20px; flex-direction: column; text-align: center; gap: 20px; }
            .content-wrapper { flex-direction: column; width: 100%; justify-content: center; }
            .server-status { justify-content: center; }
            
            .manage-btn { width: 100%; justify-content: center; padding: 12px; }
            .footer-content { text-align: center; }
        }
    </style>
</head>
<body>

    <canvas id="particles"></canvas>
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <nav class="dashboard-nav">
        <a href="/" class="dashboard-logo">
            <img src="<%= client.user.displayAvatarURL() %>" alt="Bot Logo">
            <%= client.user.username %>
        </a>
        
        <div class="nav-right">
            <div class="nav-user-profile">
                <img src="https://cdn.discordapp.com/avatars/<%= discordUser.id %>/<%= discordUser.avatar %>.png?size=64" alt="User">
                <span><%= discordUser.username %></span>
            </div>
            <a href="/" class="nav-back-btn"><i class="fa-solid fa-house"></i></a>
        </div>
    </nav>

    <header>
        <div class="welcome-info">
            <h1>Select Server</h1>
            <p>Welcome, <strong><%= discordUser.username %></strong>. Please choose a server.</p>
        </div>
        <a href="/" class="home-action-btn">
            Back to Home <i class="fa-solid fa-house"></i>
        </a>
    </header>

    <div class="server-grid">
        <% if (manageableGuilds.length === 0) { %>
            <div class="message-box">
                <h2>No Manageable Servers Found</h2>
                <p>You must be an Administrator in a server.</p>
                <a href="<%= client.invite %>" target="_blank" class="invite-link">
                    <i class="fa-solid fa-robot"></i> Invite Bot
                </a>
            </div>
        <% } %>

        <% manageableGuilds.forEach(guild => { %>
            <div class="server-card">
                <div class="content-wrapper">
                    <div class="server-icon">
                        <% if (guild.icon) { %>
                            <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.webp?size=256" alt="Icon" loading="lazy">
                        <% } else { %>
                            <div class="server-icon-placeholder"><%= guild.name.charAt(0).toUpperCase() %></div>
                        <% } %>
                    </div>
                    
                    <div class="server-info">
                        <h3><%= guild.name %></h3>
                        <div class="server-status">
                            <span class="status-dot <%= guild.isBotIn ? 'online' : 'offline' %>"></span>
                            <span><%= guild.isBotIn ? 'Bot Active' : 'Not in Server' %></span>
                        </div>
                    </div>
                </div>
                
                <% if (guild.isBotIn) { %>
                    <a href="<%= guild.dashboardUrl %>" class="manage-btn">
                        <i class="fa-solid fa-gear"></i> Manage
                    </a>
                <% } else { %>
                    <a href="<%= guild.inviteUrl || client.invite %>" target="_blank" class="manage-btn invite">
                        <i class="fa-solid fa-plus"></i> Invite
                    </a>
                <% } %>
            </div>
        <% }) %>
    </div>
    
    <footer>
        <div class="footer-content">
            <div class="footer-col">
                <h4><%= client.user.username %></h4>
                <p style="color:var(--text-muted); font-size:0.9rem; line-height: 1.6;">Building the next generation of Discord communities with advanced moderation and tools.</p>
            </div>
            <div class="footer-col">
                <h4>Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/dashboard">Dashboard</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h4>Legal</h4>
                <ul>
                    <li><a href="/terms">Terms</a></li>
                    <li><a href="/privacy">Privacy</a></li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2025 <%= client.user.username %>. All rights reserved.</p>
        </div>
    </footer>

    <script>
        const canvas = document.getElementById('particles'); const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth; canvas.height = window.innerHeight;
        let particlesArray = [];
        class Particle {
            constructor() { this.x = Math.random() * canvas.width; this.y = Math.random() * canvas.height; this.size = Math.random() * 2; this.speedX = (Math.random() * 0.5) - 0.25; this.speedY = (Math.random() * 0.5) - 0.25; this.color = Math.random() > 0.5 ? '#6366f1' : '#ec4899'; }
            update() { this.x += this.speedX; this.y += this.speedY; if (this.size > 0.2) this.size -= 0.01; if (this.x < 0 || this.x > canvas.width) this.speedX *= -1; if (this.y < 0 || this.y > canvas.height) this.speedY *= -1; }
            draw() { ctx.fillStyle = this.color; ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2); ctx.fill(); }
        }
        function init() { particlesArray = []; for (let i = 0; i < 50; i++) particlesArray.push(new Particle()); }
        function animate() { ctx.clearRect(0, 0, canvas.width, canvas.height); for (let i = 0; i < particlesArray.length; i++) { particlesArray[i].update(); particlesArray[i].draw(); if (particlesArray[i].size <= 0.3) { particlesArray.splice(i, 1); particlesArray.push(new Particle()); } } requestAnimationFrame(animate); }
        window.addEventListener('resize', () => { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }); init(); animate();
    </script>
</body>
</html>