<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Netrcol Dashboard</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>

    <!-- Main Styles -->
    <link rel="stylesheet" href="/css/dashboard.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<% if (typeof guild !== 'undefined') { %>
<div class="dashboard-container">

    <!-- ================= SIDEBAR ================= -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="<%= client.user.displayAvatarURL() %>" alt="Bot Avatar">
            <h2>Netrcol</h2>
        </div>

        <nav class="sidebar-nav">
            <a href="/dashboard/<%= guild.id %>">
                <i class="fa-solid fa-chart-pie"></i> Overview
            </a>

            <a href="/dashboard/<%= guild.id %>/moderation">
                <i class="fa-solid fa-shield-halved"></i> Moderation
            </a>

            <a href="/dashboard/<%= guild.id %>/logging">
                <i class="fa-solid fa-file-lines"></i> Logging
            </a>

            <a href="/dashboard/<%= guild.id %>/tickets">
                <i class="fa-solid fa-ticket"></i> Tickets
            </a>

            <a href="/dashboard/<%= guild.id %>/levels">
                <i class="fa-solid fa-chart-line"></i> Leveling
            </a>

            <a href="/dashboard/<%= guild.id %>/economy">
                <i class="fa-solid fa-coins"></i> Economy
            </a>

            <!-- ðŸ”” SOCIAL NOTIFY -->
            <a href="/dashboard/<%= guild.id %>/social_notify">
                <i class="fa-solid fa-share-nodes"></i> Social Notify
            </a>
        </nav>
    </aside>

    <!-- ================= MAIN CONTENT ================= -->
    <main class="main-content">
        <header class="top-bar">
            <div class="guild-info">
                <% if (guild.icon) { %>
                    <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=64">
                <% } else { %>
                    <div class="guild-placeholder"><%= guild.name.charAt(0) %></div>
                <% } %>
                <span><%= guild.name %></span>
            </div>

            <div class="user-info">
                <img src="https://cdn.discordapp.com/avatars/<%= discordUser.id %>/<%= discordUser.avatar %>.png">
                <span><%= discordUser.username %></span>
                <a href="/auth/logout" class="logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
        </header>

        <section class="content-area">
            <%- body %>
        </section>
    </main>

</div>
<% } else { %>

<!-- ================= NO LAYOUT (LOGIN / SETTINGS) ================= -->
<%- body %>

<% } %>

</body>
</html>